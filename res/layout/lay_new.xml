<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/newbg" 
    android:gravity="center"
    >
    
    

    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_marginTop="100sp"
    
   android:weightSum="100"
    android:orientation="horizontal"
    >
      <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        
        android:text="Station name:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/etNName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:hint="Enter name"
          android:layout_weight="30" />
   </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15sp"
    
   android:weightSum="100"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/tvNAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About:"
        android:layout_weight="70"
        android:textAppearance="?android:attr/textAppearanceSmall" />

  
   <EditText
        android:id="@+id/etNAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
       
        android:hint="Not more than 256 words" />
    </LinearLayout>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15sp"
    
   android:weightSum="100"
    android:orientation="horizontal"
    >
 <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:text="Select your type"
        android:layout_weight="70"
        android:textAppearance="?android:attr/textAppearanceSmall" />
   <Spinner
        android:id="@+id/spNType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_weight="30"
        android:layout_below="@+id/etNType"
        />
</LinearLayout>
   

    <TextView
        android:id="@+id/tvNStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        
        android:text="" />

    <Button
        android:id="@+id/bNSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
       
        android:text="Submit" />

</LinearLayout>